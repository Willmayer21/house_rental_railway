<script>
document.addEventListener('DOMContentLoaded', function () {
  const video = document.getElementById('bgvid');
  const playPauseBtn = document.getElementById('playPauseBtn');
  const muteBtn = document.getElementById('muteBtn');
  const videoBox = document.querySelector('.video-box');

  // Play/pause video when the button is clicked
  playPauseBtn.addEventListener('click', function () {
    video.play();
    videoBox.classList.add('playing'); // Hide the button
  });

  // Pause video when clicking on the video
  video.addEventListener('click', function () {
    if (video.paused) {
      video.play();
      videoBox.classList.add('playing'); // Hide the button
    } else {
      video.pause();
      videoBox.classList.remove('playing'); // Show the button
    }
  });

  // Auto-play fallback
  video.play().catch(error => {
    console.log('Autoplay blocked:', error);
  });

  // Toggle mute/unmute on button click
  muteBtn.addEventListener('click', function () {
    video.muted = !video.muted;
    muteBtn.innerHTML = video.muted ? 'ðŸ”‡' : 'ðŸ”Š'; // Change icon
  });

});


  </script>


