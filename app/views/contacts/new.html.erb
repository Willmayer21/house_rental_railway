<div class="main">
  <div class="form-container">
    <h1 class="form-title">Contact Us</h1>
    <%= form_with(model: @contact, local: true, class: "contact-form") do |f| %>
      <% if @contact.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <ul>
            <% @contact.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <div class="label-container">
          <%= f.label :name, class: "form-label" %>
        </div>
        <div class="input-container">
          <%= f.text_field :name, class: "form-input" %>
        </div>
      </div>

      <div class="form-group">
        <div class="label-container">
          <%= f.label :email, class: "form-label" %>
        </div>
        <div class="input-container">
          <%= f.email_field :email, class: "form-input" %>
        </div>
      </div>

      <div class="form-group">
        <div class="label-container">
          <%= f.label :message, class: "form-label" %>
        </div>
        <div class="input-container">
          <%= f.text_area :message, rows: 5, class: "form-input" %>
        </div>
      </div>

      <div class="submit-container">
        <%= f.submit "Send Message", class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>

<style>
.main {
  display: flex;
  flex-direction: column;
  background-color: rgba(202, 194, 177);
  min-height: 100vh;
}

.form-container {
  padding-top: 5rem;
  width: 80%;
  max-width: 600px;
  margin: 0 auto;
}

.form-title {
  text-align: center;
  margin-bottom: 2rem;
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.form-group {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}

.label-container {
  width: 100px;
  text-align: left;
  padding-top: 0.5rem;
}

.input-container {
  flex-grow: 1;
}

.form-input {
  width: 100%;
  padding: 0.5rem;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit-container {
  margin-top: 1rem;
  text-align: center;
}

.submit-button {
  padding: 0.5rem 2rem;
  background-color: #4a4a4a;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.submit-button:hover {
  background-color: #333333;
}
</style>
