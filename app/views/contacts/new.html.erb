<div class="max-w-md mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">Contact Us</h1>

  <%= form_with(model: @contact, local: true) do |f| %>
    <% if @contact.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul>
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :message, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_area :message, rows: 5, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="text-center">
      <%= f.submit "Send Message", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
